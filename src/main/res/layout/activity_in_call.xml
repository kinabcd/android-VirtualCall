<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="tw.lospot.kin.call.connection.InCallActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/phoneNumber"
        android:layout_alignParentStart="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/callList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:ems="20"
        android:hint="Phone Number"
        android:text="0987654321"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/registerPhoneAccount"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:importantForAccessibility="no"
            android:src="@android:drawable/presence_invisible"/>

        <ImageButton
            android:id="@+id/addOutgoingCall"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:importantForAccessibility="no"
            android:src="@drawable/incall_audio_outgoing"
            android:tint="#999"/>

        <ImageButton
            android:id="@+id/addOutgoingVideoCall"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:importantForAccessibility="no"
            android:src="@drawable/incall_video_outgoing"
            android:tint="#999"/>

        <ImageButton
            android:id="@+id/addIncomingCall"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:importantForAccessibility="no"
            android:src="@drawable/incall_audio_incoming"
            android:tint="#999"/>

        <ImageButton
            android:id="@+id/addIncomingVideoCall"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:importantForAccessibility="no"
            android:src="@drawable/incall_video_incoming"
            android:tint="#999"/>
    </LinearLayout>
</RelativeLayout>
